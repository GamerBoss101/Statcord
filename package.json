{
  "name": "statcord",
  "version": "1.0.0",
  "description": "Discord Custom Rich Presence with a library or custom templates and banners",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder build",
    "dist:linux": "electron-builder --linux"
  },
  "author": "Sir Blob",
  "email" : "sirblob0@gmail.com",
  "license": "Apache-2.0 License",
  "dependencies": {
    "colors": "^1.4.0",
    "discord-rpc": "^4.0.1",
    "discord.js": "^13.2.0",
    "find-process": "^1.4.5",
    "moment": "^2.29.1"
  },
  "devDependencies": {
    "electron": "^15.1.2",
    "electron-builder": "^22.13.1",
    "fs": "^0.0.1-security",
    "node-fetch": "^3.0.0"
  },
  "build": {
    "appId": "ml.bosstop.statcord",
    "forceCodeSigning": true,
    "productName": "Statcord",
    "win": {
      "target": "nsis",
      "asar": "true"
    },
    "mac": {
      "target": "dmg",
      "icon": "./icon.png"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "./icon.png",
      "category": "Development",
      "synopsis": "Discord Custom Rich Presence",
      "description": "Discord Custom Rich Presence with a library or custom templates and banners"
    },
    "nsis": {
      "license": "./eula.txt",
      "deleteAppDataOnUninstall": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Statcord",
      "oneClick": false,
      "allowElevation": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "GamerBoss101",
        "repo": "Statcord"
      }
    ]
  }
}
