{
    "name": "statcord",
    "version": "1.1.0",
    "description": "Discord Custom Rich Presence with a library or custom templates and banners",
    "main": "index.js",
    "scripts": {
        "start": "electron .",
        "pack": "electron-builder build",
        "dist:linux": "electron-builder --linux",
        "dist:mac": "electron-builder --mac"
    },
    "author": "Sir Blob",
    "email": "sirblob0@gmail.com",
    "license": "Apache-2.0 License",
    "devDependencies": {
        "electron": "^15.3.0",
        "electron-builder": "^22.13.1",
        "fs": "^0.0.1-security",
        "node-fetch": "^3.0.0"
    },
    "dependencies": {
        "discord-rpc": "^4.0.1",
        "discord.js": "^13.3.1",
        "express": "^4.17.1",
        "find-process": "^1.4.5",
        "glasstron": "^0.1.1",
        "moment": "^2.29.1"
    },
    "build": {
        "appId": "ml.bosstop.statcord",
        "forceCodeSigning": false,
        "productName": "Statcord",
        "win": {
            "target": "nsis",
            "asar": "true"
        },
        "mac": {
            "target": "dmg",
            "icon": "./icon.png"
        },
        "linux": {
            "target": [
                "deb",
                "AppImage"
            ],
            "icon": "./icon.png",
            "category": "Development",
            "synopsis": "Discord Custom Rich Presence",
            "description": "Discord Custom Rich Presence with a library or custom templates and banners"
        },
        "nsis": {
            "license": "./eula.txt",
            "deleteAppDataOnUninstall": true,
            "createStartMenuShortcut": true,
            "shortcutName": "Statcord",
            "oneClick": false,
            "allowElevation": false,
            "allowToChangeInstallationDirectory": false,
            "createDesktopShortcut": true
        },
        "publish": [
            {
                "provider": "github",
                "owner": "GamerBoss101",
                "repo": "Statcord"
            }
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/GamerBoss101/Statcord"
    }
}
